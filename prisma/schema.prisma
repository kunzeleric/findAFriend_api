// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id               String  @id @default(uuid())
  name             String
  name_responsible String
  whatsapp         String
  email            String  @unique
  password_hash    String
  address          String
  city             String
  postal_code      String
  image            String?
  pets             Pet[]

  @@map("orgs")
}

model Pet {
  id          String    @id @default(uuid())
  name        String
  about       String
  age         String
  energy      Int
  independent String
  environment String
  image       String?
  city        String
  adopted_at  DateTime?
  created_at  DateTime  @default(now())

  org                   Organization           @relation(fields: [org_id], references: [id])
  org_id                String
  adoption_requirements AdoptionRequirements[]
  pet_gallery           PetGallery[]

  @@map("pets")
}

model PetGallery {
  id    String @id @default(uuid())
  image String

  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("pet_gallery")
}

model AdoptionRequirements {
  id    String @id @default(uuid())
  title String

  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("adoption_requirements")
}
